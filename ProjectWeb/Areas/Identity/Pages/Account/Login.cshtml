@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<section class="half-width background round">
    <h2 class="headline">Logga In</h2>
    <h3>Logga in för att se dina tidigare ordrar och erbjudande</h3>
    <img src="images/photo-1594212699903-ec8a3eca50f5.jpg" alt="Bild på en hamburgare">
</section>



<section class="half-width right background roundfull">
    <h2>Log in</h2>
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Logga in">
        <p>Har inte ett ett konto?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Klicka här för att Skapa ett konto</a></p>
    </form>
</section>
